<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AroundFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/around_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:minHeight="?attr/actionBarSize"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周边"
            android:textSize="20dp"
            android:textColor="@color/TextColor"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/TextColor"
        app:layout_constraintTop_toBottomOf="@+id/around_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme_blue"
        app:layout_constraintTop_toBottomOf="@+id/around_toolbar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/theme_grey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:text="全部分類" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/vector_drawable_collapse"
                android:gravity="center"/>


        </LinearLayout>



        <View
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/TextColor"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/theme_grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部商區"
            android:gravity="center"
            android:drawableRight="@drawable/vector_drawable_collapse"/>
        <View
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/TextColor"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/theme_grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="默認排序"
            android:gravity="center"
            android:drawableRight="@drawable/vector_drawable_collapse"/>
        <View
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/TextColor"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/theme_grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="篩選"
            android:gravity="center_vertical|center"
            android:drawableRight="@drawable/vector_drawable_collapse"
            android:layout_gravity="center"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>